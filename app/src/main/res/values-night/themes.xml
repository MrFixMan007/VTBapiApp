    <style name="CustomActionButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/specialActionElementsColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/t1</item>
    </style>
